pipeline {
    agent any
     parameters{
        string (name:'ENV',default value:'Test'/description:'env to deploy')
        booleanparam(name:'executeTests',defaultValue:true,description:'decide to run it')
        choice(name:'APPVERSION',choice['1.1','1.2','1.3'])
     }
        stages {
        stage(compile) {
            steps {
                script{
                    echo "compile the code"
                }
                }
        }    
                stage(Unittest) {
            steps {
                script{
                    echo "run the test cases"
                }
                }
                }    
                stage(package) {
            steps {
                script{
                    echo "package the code"
                    echo "Deploy to env: ${params.ENV}"
                    echo "deploying the app version:${params.APPVERSION}"
                }
                }

                
            }

            
            }
        }

